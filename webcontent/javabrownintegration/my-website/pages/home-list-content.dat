		 <script>
				this.imagePreview = function(){
					/* CONFIG */
						
						xOffset = 100;
						yOffset = 100;
						
						// these 2 variable determine popup's distance from the cursor
						// you might want to adjust to get the right result
						
					/* END CONFIG */						
					$("a.preview").hover(function(e){
						this.t = this.title;
						this.title = "";	
						var c = (this.t != "") ? "<br/>" + this.t : "";
						$("body").append("<p id='preview'><img width='200' height='200' src='"+ this.href +"' alt='Image preview' />"+ c +"<input type='text'/> <button>hello</button></p>");								 
						$("#preview")
							.css("top",(e.pageY - xOffset) + "px")
							.css("left",(e.pageX + yOffset) + "px")
							.fadeIn("fast");						
					},
					function(){
						this.title = this.t;	
						$("#preview").remove();
					});	
					$("a.preview").mousemove(function(e){
						$("#preview")
							.css("top",(e.pageY - xOffset) + "px")
							.css("left",(e.pageX + yOffset) + "px");
					});			
				}; 
				imagePreview();
		 </script>
